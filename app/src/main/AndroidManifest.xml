<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfoirazaballevy.studyhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".subject.activities.ListSubjects">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".subject.activities.AddSubject" />
        <activity android:name=".topic.activities.ListTopics" />
        <activity android:name=".topic.activities.AddTopic" />
        <activity android:name=".topic.activities.TopicPanel" />
        <activity android:name=".topic.question.mo.activities.AddMOQuestion"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".topic.question.tf.activities.AddTFQuestion" />
    </application>

</manifest>